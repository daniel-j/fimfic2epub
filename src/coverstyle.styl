@page {
	padding: 0;
	margin:0;
}

html, body {
  padding: 0;
  margin: 0;
  height: 100%;
}

#cover {
  width: 100%;
  height: 100%;
  display: block;
  margin: 0;
  padding: 0;
}

h1, h2 {
  font-family: sans-serif;
  text-align: center;
}

h1 {
  margin-top: 3em;
  font-size: 2em;
}

h2 {
  margin-top: 2em;
  font-size: 1.5em;
  font-weight: normal;
  opacity: 0.8;
}
