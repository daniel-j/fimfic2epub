{
	"manifest_version": 3,

	"name": "fimfic2epub",
	"short_name": "fimfic2epub",
	"description": "Improved EPUB exporter for Fimfiction",
	"version": "0.0",

	"icons": {
		"128": "icon-128.png"
	},

	"background": {
		"service_worker": "build/eventPage.js"
	},

	"content_scripts": [
		{
			"matches": ["https://www.fimfiction.net/*", "https://fimfiction.net/*"],
			"js": ["build/fimfic2epub.js"],
			"css": ["inject.css"]
		}
	],

	"action": {
		"default_icon": "fimfic2epub-logo.png"
	},

	"web_accessible_resources": [
		{
			"resources": ["fimfic2epub-logo.png"],
			"matches": ["https://www.fimfiction.net/*"]
		}
	],

	"permissions": [
		"storage"
	],
	"host_permissions": [
		"https://fimfiction.net/*",
		"https://*.fimfiction.net/*",
		"https://www.googleapis.com/*",
		"https://i.ytimg.com/*",
		"https://twemoji.maxcdn.com/*"
	]
}
