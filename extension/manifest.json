{
	"manifest_version": 2,

	"name": "fimfic2epub",
	"short_name": "fimfic2epub",
	"description": "Improved EPUB exporter for Fimfiction",
	"version": "0.0",

	"icons": {
		"128": "icon-128.png"
	},

	"background": {
		"scripts": ["build/eventPage.js"],
		"persistent": false
	},

	"content_scripts": [
		{
			"matches": ["https://www.fimfiction.net/*", "https://fimfiction.net/*"],
			"js": ["build/fimfic2epub.js"],
			"css": ["inject.css"]
		}
	],

	"page_action": {
		"default_icon": "fimfic2epub-logo.png"
	},

	"web_accessible_resources": [
		"fimfic2epub-logo.png"
	],

	"permissions": [
		"https://fimfiction.net/*",
		"https://*.fimfiction.net/*",
		"https://www.googleapis.com/*",
		"https://i.ytimg.com/*",
		"https://twemoji.maxcdn.com/*",
		"https://cdn.jsdelivr.net/gh/twitter/*",
		"storage"
	],

	"browser_specific_settings": {
		"gecko": {
			"id": "fimfic2epub@mozilla.org"
		}
	}
}
